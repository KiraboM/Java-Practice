public class BinarySearch{

    public int binarySearch(int[] array, int n){
        int left = 0;
        int right = array.length - 1;
        boolean found = false;
        while(left <= right && !found){
            int mid = (left + right)/2;
            if(array[mid] == n){
                found = true;
            } else if(array[mid] < n){
                left = mid + 1;
            } else if(array[mid] > n){
                right = mid - 1
            }
            }
        if(found){
            return mid;
        } else{
            return -1; //Element not found
        }
        }

    }
